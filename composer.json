{
    "name": "onix-systems-php/hyperf-actions-log",
    "type": "extention",
    "license": "MIT",
    "keywords": [
        "php",
        "hyperf"
    ],
    "description": "An extension that consists of actions register functionality for an application",
    "autoload": {
        "psr-4": {
            "OnixSystemsPHP\\HyperfActionsLog\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "OnixSystemsPHP\\HyperfActionsLog\\Test\\": "tests"
        }
    },
    "require": {
        "php": ">=8.1",
        "ext-json": "*",
        "onix-systems-php/hyperf-core": ">=1.1.0",
        "hyperf/database": "^3.0",
        "hyperf/event": "^3.0",
        "hyperf/http-server": "^3.0",
        "hyperf/utils": "^3.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "mockery/mockery": "^1.0",
        "phpstan/phpstan": "^1.0",
        "phpunit/phpunit": ">=7.0",
        "swoole/ide-helper": "^4.5|^5.0"
    },
    "suggest": {
        "swow/swow": "Required to create swow components."
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "scripts": {
        "test": "phpunit -c phpunit.xml --colors=always",
        "analyse": "phpstan analyse --memory-limit 1024M -l 0 ./src",
        "cs-fix": "php-cs-fixer fix $1"
    },
    "extra": {
        "hyperf": {
            "config": "OnixSystemsPHP\\HyperfActionsLog\\ConfigProvider"
        }
    }
}
